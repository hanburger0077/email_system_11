<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.backend.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
    </resultMap>

    <select id="findByEmail" parameterType="String" resultMap="UserResultMap">
        SELECT id, username, password, email, phone FROM users WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.example.backend.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, email, phone)
        VALUES(#{username}, #{password}, #{email}, #{phone})
    </insert>

    <delete id="deleteByEmail" parameterType="String">
        DELETE FROM users WHERE email = #{email}
    </delete>

    <update id="updatePassword" parameterType="com.example.backend.entity.User">
        UPDATE users SET password = #{password} WHERE email = #{email}
    </update>

    <update id="updateUsername" parameterType="com.example.backend.entity.User">
        UPDATE users SET username = #{username} WHERE email = #{email}
    </update>

    <update id="updatePhone" parameterType="com.example.backend.entity.User">
        UPDATE users SET phone = #{phone} WHERE email = #{email}
    </update>

    <select id="findById" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="authenticate" resultType="boolean">
        SELECT COUNT(*) > 0 FROM users WHERE email = #{email} AND password = #{password}
    </select>

</mapper>